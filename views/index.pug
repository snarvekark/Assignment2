extends default

block content	
  div.container
      div.col-md-4
        table(style='width:100%', border='0')
          tr
            th TimeStamp
            th Tweet
          each record in tweet
            tr
              td #{record.created_at}
              td #{record.text}
        table(style='width:100%', border='0')
          tr      
            td
              <button class="btn btn-info btn-sm" type="button" style='margin-left: 10px; margin-top: 20px;'>Create New Tweet</button>
            td  
              <button class="btn btn-info btn-sm" type="button" style='margin-left: 10px; margin-top: 20px;'>Update Tweet</button>
            td
              <button class="btn btn-info btn-sm" type="button" style='margin-left: 10px; margin-top: 20px;'>Delete Tweet</button>

        
